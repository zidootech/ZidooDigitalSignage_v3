<com.zidoo.test.hdmi.pip.FloatingWindowView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/floating_surfaceview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </RelativeLayout>

    <TextView
        android:id="@+id/home_ac_surfaceview_no_sigle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:singleLine="true"
        android:text="No HDMI Signal"
        android:textColor="#ffffff"
        android:textSize="35sp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/floating_recording_operate_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:layout_marginRight="12dip"
        android:layout_marginTop="12dip"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/floating_recording_big"
            android:layout_width="18dip"
            android:layout_height="18dip"
            android:scaleType="fitXY"
            android:src="@drawable/big" />

        <ImageView
            android:id="@+id/floating_audio_big"
            android:layout_width="18dip"
            android:layout_height="18dip"
            android:layout_marginLeft="16dip"
            android:scaleType="fitXY"
            android:src="@drawable/pip_audio_close" />

        <ImageView
            android:id="@+id/floating_recording_delete"
            android:layout_width="18dip"
            android:layout_height="18dip"
            android:layout_marginLeft="16dip"
            android:scaleType="fitXY"
            android:src="@drawable/delete" />
    </LinearLayout>

</com.zidoo.test.hdmi.pip.FloatingWindowView>